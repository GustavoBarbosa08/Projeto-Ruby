  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Fisrt Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name%></td>
          <td><%= friend.last_name%></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= link_to 'Edit', friend, class:"btn btn-secondary" %></td>
          <td><%= link_to "Show this friend", friend, class:"btn btn-secondary" %></td>
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>